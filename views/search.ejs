<% include partials/header %>
<body style="background-image: url('img/bca.jpg');">
<nav style="position: fixed;top: 0;right: 0;left: 0;z-index: 200;" class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" style="text-decoration: none;color: #45b288;" href="/">DoodlePedia</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
            aria-expanded="false" aria-label="Toggle navigation">
            <i class="fas fa-search"></i>
        </button>
        <div class="collapse navbar-collapse container" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto"></ul>
            <form class="form-inline my-2 my-lg-0" action="/result" method="GET">
                <input id="four" maxlength="25" style="padding: 5px 20px;margin: 3px 0;box-sizing: border-box;border: none;background-color: #3CBC8D;color: white;" type="text" name="query" class="form-control mr-sm-2" placeholder="Search Videos...">
                <input id="five" class="form-control btn btn-info my-2 my-sm-0" type="submit" value="Search">
            </form>
        </div>
</nav>
    <div style="position: relative;left: 0;right: 0;padding-top: 2%;" class="container-fluid">
        <div id="one"></div>
        <h2 style="border-left:8px solid grey;padding-left:3px;color:lightcoral;font-family: 'Playfair Display', serif;">YouTube</h2>
 <div class="row">
    <% search["items"].forEach(function(search){ %>
       <% var embed = 'https://www.youtube.com/embed/'+search.id.videoId+'?&amp;theme=dark&amp;color=white&amp;keyboard=1&amp;autohide=1&amp;cc_load_policy=1&amp;modestbranding=1&amp;fs=0&amp;showinfo=0&amp;rel=0'; %>
       <div class="col-md-6">
           <div class="container">
            <iframe class="embed-responsive-item" src="<%= embed %>" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
            <div class="caption">
            <p id="two" style="color: black;"><%=search["snippet"]["title"] %></p>

            </div>   
        </div>
       </div>
    <% }); %>

 </div>
 <hr>
        <h2 style="border-left:8px solid grey;padding-left:3px;color:lightcoral;font-family: 'Playfair Display', serif;">Pixabay</h2>
 <div class="row">
     <% pixx["hits"].forEach(function(pix){ %>
        <% var pixurl = pix.videos.medium.url; %>
        <div class="col-md-6">
        <div class="container">
        <video class="embed-responsive-item" preload="meta" controls controlsList="nodownload">
            <source src="<%= pixurl %>">
        </video>
        <div class="caption">
            <p id="two" style="color: black;">
                <%=pix["tags"]%>
            </p>
        
        </div>
        </div>
        </div>
    <% }); %>
 </div>
 <hr>

<h2 style="border-left:8px solid grey;padding-left:3px;color:lightcoral;font-family: 'Playfair Display', serif;">Pexels</h2>
<div class="row">
    <% resu["videos"].forEach(function(pexel){ %>
        <% var pexelu = pexel.url; %>
            <div class="col-md-6">
                <div class="container">
                    <video class="embed-responsive-item" preload="meta" poster="<%= pexel.image%>" controls controlsList="nodownload">
                        <source src="<%= pexelu %>">
                    </video>
                    
                </div>
            </div>
            <% }); %>
</div>
<hr>
</div>

<% include partials/footer %>