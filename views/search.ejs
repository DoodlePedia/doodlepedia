<% include partials/header %>
<style>
    iframe {
        width: 43vw;
        height: 24vw;
    }
    body{
        background-color: #1c262f;
    }
    input[type=text]{
         
        /*color: white;
        box-sizing: border-box; */
    width: 100%;
    padding: 12px 20px;
    margin: 8px 0;
    box-sizing: border-box;
    border: none;
    background-color: #3CBC8D;
    color: white;
    }
    input::placeholder{
        color: white;
    }
    </style>
    <div class="container" style="margin: 5% auto;width: 60%;">
        <form action="/result" method="GET">
            <div class="form-group">
                <input type="text" name="user" placeholder="Enter YouTuber's Name..." autofocus>
            </div>
            <div class="form-group">
                <input type="submit" class="form-control btn btn-block btn-info" value="Search">
            </div>
                    <p style="text-align: center;color: grey;"><%= amb %></p>
            </div>

<div style="position: relative;background-color:#1c262f;left: 0;right: 0;padding-top: 2%;" class="container-fluid">
 <div class="row">
    <% search["items"].forEach(function(search){ %>
       <% var embed = 'https://www.youtube.com/embed/'+search.id.videoId+'?rel=0&amp;controls=0&amp;showinfo=0'; %>
       <div class="col-md-6">
           <div class="container">
            <iframe class="embed-responsive-item" src="<%= embed %>" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
            <div class="caption">
            <p style="font-size: 1.2rem;color: white;"><%=search["snippet"]["title"] %></p>

            </div>   
        </div>

       </div>
    <% }); %>
 </div>
</div>

<% include partials/footer %>